@{
}
<form method="post" asp-action="create" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter title">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" class="form-control" id="exampleInputPassword1" placeholder="Enter description" style="margin-bottom:10px">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="ClubCategory">Category</label>
        <select asp-for="ClubCategory" asp-items="@Html.GetEnumSelectList<RunGroupWebApp.Data.Enum.ClubCategory>()">
            <option>--Select--</option>
        </select>

       
    </div>
    <div class="form-group">
        <label asp-for="Address.Street">Street</label>
        <input asp-for="Address.Street" class="form-control" id="exampleInputPassword1" placeholder="Street" style="margin-bottom:10px">
        <span asp-validation-for="Address.Street" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address.City">City</label>
        <input asp-for="Address.City" class="form-control" id="exampleInputPassword1" placeholder="City" style="margin-bottom:10px">
        <span asp-validation-for="Address.City" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address.State">State</label>
        <input asp-for="Address.State" class="form-control" id="exampleInputPassword1" placeholder="Image" style="margin-bottom:10px">
        <span asp-validation-for="Address.State" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Image">Image</label>
        <input asp-for="Image" type="file" class="form-control" id="exampleInputPassword1" placeholder="Image" style="margin-bottom:10px">
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>